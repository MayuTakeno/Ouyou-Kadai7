
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% groups.each do |group| %>
            <tr>
              <td><%= image_tag group.get_image, size: '50x50' %></td>
              <td><%= group.name %></td>
              <td><%= link_to 'Show', group, class: "group_#{group.id}" %></td>
              <td>
                <% if group.is_owned_by?(current_user) %>
                  <%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id}" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
