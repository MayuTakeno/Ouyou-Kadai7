<div class='container'>
      <% if current_user.id != @user.id && current_user.following?(@user) && @user.following?(current_user) %>
        <%= link_to "DM", chat_path(@user.id) %>
      <% end %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, book: @book, user: @user %>
      <%= render 'dairy_posts_form', user: @user %>
      <%= render 'post_number',books: @books, today_book: @today_book, yesterday_book: @yesterday_book, this_week_book: @this_week_book, last_week_book: @last_week_book %>
    </div>
  </div>
</div>
