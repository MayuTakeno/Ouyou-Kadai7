<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %>さんとのメッセージ</h1>
      <table class="message table" style="width: 400px;">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;" ><%= current_user.name %></th>
            <th style="text-align: right; font-size:20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tbody>
            <tr>
              <th>
                <p style="text-align:left;"><%= chat.message %></p>
              </th>
            </tr>
          <% else %>
            <tr>
              <th>
                <p style="text-align:right;"><%= chat.message %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>
      <div class="errors">
        <%= render'layouts/errors', obj: @chat %>
      </div>
      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "SEND", class: "btn btm-sm btn-success chat-btn" %>
      <% end %>
    </div>
  </div>
</div>