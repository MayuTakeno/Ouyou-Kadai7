<table class='table table-hover table-inverse'>
  <thead>
    <p><%= render 'searches/search', user: @user %></p>
      
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
        </td>
        <td>
          <span id="favorite-btn_<%= book.id %>">
            <%= render 'favorites/favorite-btn', book: book, favorites: @favorites %>
          </span>
        </td>
        <td>
          <p class="view_count">閲覧数: <%= book.view_counts.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

